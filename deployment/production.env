# Production Environment Configuration

# Database Configuration
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/orderdb
SPRING_DATASOURCE_USERNAME=orderuser
SPRING_DATASOURCE_PASSWORD=orderpass
DATABASE_HOST=postgres
DATABASE_PORT=5432

# RabbitMQ Configuration
SPRING_RABBITMQ_HOST=rabbitmq
SPRING_RABBITMQ_PORT=5672
SPRING_RABBITMQ_USERNAME=orderuser
SPRING_RABBITMQ_PASSWORD=orderpass
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672

# Application Configuration
SPRING_PROFILES_ACTIVE=production

# JVM Configuration
JAVA_OPTS=-Xmx512m -Xms256m -XX:+UseG1GC -XX:+UseStringDeduplication -XX:+PrintGCDetails -XX:+PrintGCTimeStamps

# Logging Configuration
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_ORDERSYSTEM=DEBUG

# Frontend Configuration
REACT_APP_API_URL=http://localhost

# Health Check Configuration
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=always

# Security Configuration
SERVER_ERROR_INCLUDE_MESSAGE=never
SERVER_ERROR_INCLUDE_BINDING_ERRORS=never
SERVER_ERROR_INCLUDE_STACKTRACE=never
SERVER_ERROR_INCLUDE_EXCEPTION=false