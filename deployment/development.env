# Development Environment Configuration

# Database Configuration
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/orderdb
SPRING_DATASOURCE_USERNAME=orderuser
SPRING_DATASOURCE_PASSWORD=orderpass
DATABASE_HOST=localhost
DATABASE_PORT=5432

# RabbitMQ Configuration
SPRING_RABBITMQ_HOST=localhost
SPRING_RABBITMQ_PORT=5672
SPRING_RABBITMQ_USERNAME=orderuser
SPRING_RABBITMQ_PASSWORD=orderpass
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672

# Application Configuration
SPRING_PROFILES_ACTIVE=development

# JVM Configuration
JAVA_OPTS=-Xmx256m -Xms128m -XX:+UseG1GC

# Logging Configuration
LOGGING_LEVEL_ROOT=DEBUG
LOGGING_LEVEL_COM_ORDERSYSTEM=DEBUG
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_AMQP=DEBUG

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8084

# Health Check Configuration
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics,env,configprops
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=always

# Security Configuration (more verbose for debugging)
SERVER_ERROR_INCLUDE_MESSAGE=always
SERVER_ERROR_INCLUDE_BINDING_ERRORS=always
SERVER_ERROR_INCLUDE_STACKTRACE=on_param
SERVER_ERROR_INCLUDE_EXCEPTION=true